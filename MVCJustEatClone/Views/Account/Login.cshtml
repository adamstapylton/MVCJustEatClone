@model LoginViewModel

<h3>Login</h3>
<div class="container">
    <div class="card">
        <div class="card-header">
            Please Log In
        </div>
        <div class="card-body">
            <form asp-action="Login" method="post">
                <input asp-for="@Model.ReturnUrl" hidden/>
                <div class="form-group">
                    <label asp-for="@Model.Email"></label>
                    <input class="form-control" asp-for="@Model.Email" />
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Password"></label>
                    <input class="form-control" asp-for="@Model.Password" />
                </div>
                <div class="form-group">
                    <label asp-for="@Model.RememberMe"></label>
                    <input asp-for="@Model.RememberMe"/>
                </div>
                <button type="submit" class="btn btn-primary">Log In</button>
            </form>
            <a asp-action="Register" asp-route-returnUrl="@Model.ReturnUrl">Register Here</a>
        </div>
    </div>
</div>